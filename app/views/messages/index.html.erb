<h1>Listing Messages</h1>

<div class="table-responsive">


<table class="table table-hover">
  <thead>
    <tr>
      <th>Message</th>
<!--       <th>Phone</th> -->
      <th> Good </th>
      <th> Pending </th>
      <th> Bad </th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.text %></td>
<!--         <td><%= message.phone %></td> -->
        <td><%= message.good %></td>
        <td><%= message.pending %></td>
        <td><%= message.bad %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Message', new_message_path %></button>


